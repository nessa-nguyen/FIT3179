  
{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Frequency of Volcanic Explosivity Index (VEI)",
  "width": 610,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/nessa-nguyen/FIT3179-Assignment2/main/eruptions.csv"
  },
  "transform": [
    {"filter": "datum.vei !== 'NA'"},
    {"filter": "datum.start_year > Year_Above"}
  ],
  "params": [
    {
      "name": "Year_Above",
      "value": -12000,
      "bind": {
        "input": "range",
        "min": -12000,
        "max": 2020,
        "step": 100,
        "name": "Data after: "
      }
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {"field": "vei", "type": "ordinal", "title": "VEI"},
    "y": {
      "aggregate": "count",
      "type": "quantitative",
      "title": "Amount of eruptions"
    },
    "color": {
      "field": "vei", 
      "type": "nominal", 
      "scale":{
        "domain": [0,1,2,3,4,5,6,7],
        "range": ["#960018",
          "#7C0A02",
          "#420D09",
          "#800000",
          "#B80F0A",
          "#CD5C5C",
          "#FA8072",
          "#EAC3"]
      },
      "title": "VEI"
    },
    "tooltip": [
      {"field": "vei", "type": "nominal", "title": "VEI"},
      {
        "field": "vei",
        "aggregate": "count",
        "type": "nominal",
        "title": "Amount of Eruptions"
      }
    ]
  },
  "config": {}
}
