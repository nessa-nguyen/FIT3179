{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 610,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/nessa-nguyen/FIT3179-Assignment2/main/significant-volcanic-eruption.csv"
  },
  "params": [
    {
      "name": "Volcano_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Caldera",
          "Cinder cone",
          "Complex volcano",
          "Compound volcano",
          "Crater rows",
          "Fissure vent",
          "Lava cone",
          "Lava dome",
          "Maar",
          "Pyroclastic cone",
          "Pyroclastic shield",
          "Shield volcano",
          "Stratovolcano",
          "Subglacial volcano",
          "Submarine volcano",
          "Tuff cone",
          "Volcanic field"
        ],
        "labels": [
          "Show All",
          "Caldera",
          "Cinder cone",
          "Complex volcano",
          "Compound volcano",
          "Crater rows",
          "Fissure vent",
          "Lava cone",
          "Lava dome",
          "Maar",
          "Pyroclastic cone",
          "Pyroclastic shield",
          "Shield volcano",
          "Stratovolcano",
          "Subglacial volcano",
          "Submarine volcano",
          "Tuff cone",
          "Volcanic field"
        ],
        "name": "Volcano Type Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Volcano_selection == null || datum.Volcano_Type == Volcano_selection"
    },
    {"filter": "datum.vei !== ''"}
  ],
  "mark": "circle",
  "encoding": {
    "x": {"field": "vei", "title": "Volcanic Explosivity Index"},
    "y": {
      "field": "Elevation",
      "type": "quantitative",
      "title": "Elevation (m)"
    },
    "color": {"field": "Volcano_Type", "type": "nominal"},
    "size": {"value": 100},
    "tooltip": [
      {"field": "Volcano Name"},
      {"field": "Country"},
      {"field": "Year"},
      {"field": "Volcano_Type", "title": "Volcano Type"}
    ]
  },
  "config": {
    "axisX": {"domain": false, "labelAngle": 0, "tickColor": "#FFFFFF"},
    "axisY": {"domain": false, "labelAngle": 0, "tickColor": "#FFFFFF"},
    "view": {"stroke": null},
    "legend": {"disable": true},
    "style": {
      "label": {
        "baseline": "middle",
        "align": "right",
        "dx": -5,
        "tooltip": null
      },
      "tick": {"orient": "horizontal", "tooltip": null}
    }
  }
}
